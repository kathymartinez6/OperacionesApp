<?xml version="1.0" encoding="utf-8" ?>
<<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperacionesApp.RectanguloPage"
             Title="Área del rectángulo">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Base del rectángulo:" FontSize="18" />
            <Entry x:Name="BaseEntry" Placeholder="Ingrese la base" Keyboard="Numeric" />

            <Label Text="Altura del rectángulo:" FontSize="18" />
            <Entry x:Name="AlturaEntry" Placeholder="Ingrese la altura" Keyboard="Numeric" />

            <Button Text="Calcular Área"
                    Clicked="OnCalcularClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White" />
            <Button Text="Limpiar"
                    Clicked="OnLimpiarClicked"
                    BackgroundColor="#F44336"
                    TextColor="White" />

            <Label x:Name="ResultadoLabel"
                   Text=""
                   FontSize="18"
                   TextColor="Blue"
                   FontAttributes="Bold" />
        </VerticalStackLayout>
    </ScrollView>
    </ContentPage>
